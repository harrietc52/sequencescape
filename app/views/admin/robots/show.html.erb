
<p>
  <b>Name:</b>
  <%=h @robot.name %>
</p>

<p>
  <b>Location:</b>
  <%=h @robot.location %>
</p>


<h2>Properties</h2>
<table class="table">
  <thead>
    <th>Name</th>
    <th>Key</th>
    <th>Value</th>
</thead>
<% @robot.robot_properties.each do |property| %>
<tr>
  <td><%= property.name %></td>
  <td><%= property.key %></td>
  <td><%= property.value %></td>
</tr>
<% end %>
</table>


<%= link_to 'Edit', edit_admin_robot_path(@robot) %> |
<%= link_to 'Back', admin_robots_path %> |
<%= link_to 'Manage Properties', admin_robot_robot_properties_path(@robot) %> |
<%= link_to 'All robots', admin_robots_path %>
