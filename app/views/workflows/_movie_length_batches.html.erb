
<%= form_for @workflow, url: { action: "stage", id: @stage, workflow_id: @workflow.id, batch_id: @batch.id, next_stage: true }, html: { id: "stage_form"} do |form| %>
<p>Select a movie lengths.</p>
<table id="smrt_cells_available" width="50%" class="sortable" cellpadding="2" cellspacing="0">
  <thead>
    <tr><th>Library Tube</th><th>Movie length (minutes)</th></tr>
  </thead>
  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= label_tag( "asset[#{asset.id}]", "Movie length for #{asset.human_barcode}", style: 'display:none;') %><%= asset.name %>: <%= asset.human_barcode %></td>
        <td><%= select_tag "asset[#{asset.id}]", options_for_select(@valid_movie_lengths,selected: @default_movie_length) %></td>
      </tr>
    <% end%>
  </tbody>
</table>

<%= render partial: "next_stage_submit" %>

<% end %>
