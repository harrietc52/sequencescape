
<div id="commentBox">
  <div class="col-md-9">
    <%= comment.description %>
  </div>
  <div  class="col-md-3">
    Added by <%= comment.user.try(:login)||"Unknown user" %> <%= comment.created_at.to_formatted_s(:short)%> &nbsp;
    <% if (current_user == comment.user) || current_user.administrator? %>
      <%= button_to 'Remove', request_comment_path(comment.commentable,comment), form:{ data: { update: "#request_annotations_#{commentable.id}" }, class:'remote-form'}, method: :delete, remote: true, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>

