
<% add :about, "Edit request." -%>
<% add :menu, "Back to request" => request_path(@request) -%>

<div class="page-header"><h1>EDIT <%= @request.id %></h1></div>

<div class="info">
Edit your request. Required fields are marked with <%= required_marker %>.
</div>
<div id="study">
  <%= form_for :request, url: request_path(@request), html: {method: :put} do |form| -%>
    <%= render partial: "form", locals: { read_only: false, form: form } %>
  <% end -%>
</div>
